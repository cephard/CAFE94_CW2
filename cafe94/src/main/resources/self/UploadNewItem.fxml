<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="480.0" minWidth="854.0" prefHeight="633.0" prefWidth="873.0" stylesheets="@menucss.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu.UploadItemController">
    <center>
      <HBox alignment="CENTER" spacing="120.0" BorderPane.alignment="CENTER">
         <children>
              <VBox alignment="CENTER_LEFT" spacing="12.0">
                  <children>
                      <Label text="Name:" />
                      <TextField fx:id="nameText" />
                      <Label text="Type:" />
                      <TextField fx:id="typeText" />
                      <Label text="Quantity:" />
                      <TextField fx:id="quantityText" />
                      <Label text="Price:" />
                      <TextField fx:id="priceText" />
                      <Label text="Calories:" />
                      <TextField fx:id="caloriesText" />
                  </children>
              </VBox>
            <VBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                      <Label text="Vegan:" />
                      <RadioButton fx:id="veganYesRadioButton" text="Yes" />
                      <RadioButton fx:id="veganNoRadioButton" text="No" />
                      <Label text="Image:" />
                      <ImageView fx:id="imageView" fitHeight="119.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
                      <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitItem" text="Upload" />
               </children>
            </VBox>
         </children>
      </HBox>
    </center>
</BorderPane>
